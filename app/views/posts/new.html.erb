<div class = room_form>
  <h2>基本情報</h2>
  <h3>ルーム情報登録</h3>
  <%= form_with model: @post, local: true do |f| %>
    <% if @post.errors.any? %>
      <ul>
      <% @post.errors.full_messages. each do |msg| %>
        <li><%= msg %></li>
      </ul>
      <% end %>
    <% end %>
      <table>
          <tr>
              <th><%= f.label :room_name ,"ルーム名" %></th>
              <td><%= f.text_field :room_name %></td>
          </tr>
          <tr>
              <th><%= f.label :room_PR ,"ルーム紹介" %></th>
              <td><%= f.text_field :room_PR %></td>
          </tr>
          <tr>
              <th><%= f.label :room_price ,"料金" %></th>
              <td><%= f.text_area :room_price %></td>
          </tr>
          <tr>
              <th><%= f.label :room_address ,"住所" %></th>
              <td><%= f.text_area :room_address %></td>
          </tr>
      </table>
      <div>
          <ul>
              <li><%= f.submit "登録"%></li>
          </ul>
      </div>
  <% end %>
</div>