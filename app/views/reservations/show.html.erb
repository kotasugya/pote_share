<div class = post_show>
  <table>
    <%= image_tag @post.image if @post.image.attached? %>
    <tr>
      <th>ルーム名</th>
      <td><%= @post.room_name %></td>
      </tr>
    <tr>
      <th>使用日数</th>
      <td><%= (@reservation.end_date.to_date - @reservation.start_date.to_date).to_i %> 日</td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @reservation.start_date %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @reservation.end_date %></td>
    </tr>
    <tr>
      <th>宿泊人数</th>
      <td><%= @reservation.num_people %></td>
    </tr>
    <tr>
      <th>合計料金</th>
      <td>¥<%= @post.room_price * ((@reservation.end_date.to_date - @reservation.start_date.to_date).to_i) %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= link_to "予約を変更する", "#"%></li>
      <li><%= link_to "予約一覧に戻る", reservations_path%></li>
    </ul>
  </div>
</div>