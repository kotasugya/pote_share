<div class = reservations_index>
  <h2>予約済みルーム一覧</h2>
    <table>
    <% @reservations. each do |reservation| %>
      <tr>
        <th>ルーム名</th>
        <td><%=link_to reservation.post.room_name, "/posts/#{reservation.post.id}/reservations/#{reservation.id}" %></td>
      </tr>
      <tr>
        <th>使用日数</th>
        <td><%= (reservation.end_date.to_date - reservation.start_date.to_date).to_i %> 日</td>
      </tr>
      <tr>
        <th>合計料金</th>
        <td>¥<%= reservation.post.room_price * ((reservation.end_date.to_date - reservation.start_date.to_date).to_i) %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= reservation.start_date %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= reservation.end_date %></td>
      </tr>
      <tr>
        <th>予約確定日時</th>
        <td><%= reservation.created_at %></td>
      </tr>
    <% end %>
    </table>
