<div class = reservation_form>
  <h2>予約項目を入力する</h2>
  <%= form_with url: @reservation, url: {action: 'create'},local: true do |f| %>
    <% if @reservation.errors.any? %>
      <ul>
      <% @reservation.errors.full_messages. each do |msg| %>
        <li><%= msg %></li>
      </ul>
      <% end %>
    <% end %>
    <table>
      <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date ,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
      <tr>
        <th><%= f.label :num_people ,"人数" %></th>
        <td><%= f.number_field :num_people %></td>
      </tr>
    </table>
    <div>
      <ul>
        <li><%= f.submit "上記の内容で予約する" %></li>
      </ul>
    </div>
  <% end %>
</div>